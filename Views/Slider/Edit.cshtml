@model dotnet_store.Models.SliderEditModel

@{
    Layout = "_AdminLayout";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header bg-white border-0 py-4 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0 text-primary">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Slider Güncelle
                        </h5>
                        <a asp-action="Index" class="btn btn-primary btn-sm">
                            <i class="fa-solid fa-list me-2"></i>Listeye Dön
                        </a>
                    </div>
                    <div class="card-body p-4 p-md-5">
                        <div asp-validation-summary="All" class="text-danger mb-4"></div>
                        <form method="post" enctype="multipart/form-data">
                            <input type="hidden" name="Id" value="@Model?.Id" />
                            <input type="hidden" name="ResimAdi" value="@Model?.ResimAdi" />
                            <div class="row mb-4">
                                <label class="col-sm-3 col-form-label fw-bold text-primary">Mevcut Resim</label>
                                <div class="col-sm-9">
                                    @if (!string.IsNullOrEmpty(Model?.ResimAdi))
                                    {
                                        <img src="/img/@Model.ResimAdi" class="img-fluid rounded" alt="Slider Resmi"
                                            style="max-height: 150px;" />
                                    }
                                    else
                                    {
                                        <p class="text-muted">Resim bulunamadı</p>
                                    }
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label asp-for="Baslik"
                                    class="col-sm-3 col-form-label fw-bold text-primary">Başlık</label>
                                <div class="col-sm-9">
                                    <input asp-for="Baslik" class="form-control rounded-3"
                                        placeholder="Slider başlığını girin" />
                                    <span asp-validation-for="Baslik" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label asp-for="Aciklama"
                                    class="col-sm-3 col-form-label fw-bold text-primary">Açıklama</label>
                                <div class="col-sm-9">
                                    <textarea asp-for="Aciklama" rows="5" class="form-control rounded-3"
                                        placeholder="Slider açıklamasını girin"></textarea>
                                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label asp-for="Resim" class="col-sm-3 col-form-label fw-bold text-primary">Yeni
                                    Resim</label>
                                <div class="col-sm-9">
                                    <input asp-for="Resim" class="form-control rounded-3" type="file" />
                                    <span asp-validation-for="Resim" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label asp-for="Index"
                                    class="col-sm-3 col-form-label fw-bold text-primary">Index</label>
                                <div class="col-sm-9">
                                    <input asp-for="Index" class="form-control rounded-3"
                                        placeholder="Slider sırasını girin" />
                                    <span asp-validation-for="Index" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label asp-for="Aktif"
                                    class="col-sm-3 col-form-label fw-bold text-primary">Aktif</label>
                                <div class="col-sm-9">
                                    <div class="form-check">
                                        <input asp-for="Aktif" class="form-check-input" />
                                        <label class="form-check-label" asp-for="Aktif">Aktif</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-9 offset-sm-3">
                                    <button type="submit" class="btn btn-primary rounded-3 px-4">
                                        <i class="fa-solid fa-save me-2"></i>Kaydet
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    /* Container */
    .container {
        max-width: 1200px;
        padding: 0 1rem;
    }

    /* Card */
    .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-header {
        background: #ffffff;
        border-radius: 1rem 1rem 0 0;
    }

    .card-body {
        padding: 1.5rem;
    }

    /* Text */
    .text-primary {
        color: #00aaff !important;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    /* Form Elements */
    .form-control,
    .form-select {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #00aaff;
        box-shadow: 0 0 0 0.2rem rgba(0, 170, 255, 0.25);
    }

    .form-check-input:checked {
        background-color: #00aaff;
        border-color: #00aaff;
    }

    .col-form-label {
        font-weight: 600;
    }

    /* Buttons */
    .btn-primary {
        background: #00aaff;
        border: none;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: #0088cc;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 136, 204, 0.3);
    }

    .btn-sm {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
    }

    /* Mobile View */
    @@media (max-width: 768px) {
        .container {
            padding: 0 0.75rem;
        }

        .card {
            margin: 0 -0.75rem;
            border-radius: 0;
        }

        .card-body {
            padding: 1rem;
        }

        .form-control,
        .form-select {
            font-size: 0.9rem;
        }

        .col-form-label {
            font-size: 0.9rem;
        }

        .btn {
            font-size: 0.9rem;
        }

        .img-fluid {
            max-height: 120px;
        }
    }
</style>