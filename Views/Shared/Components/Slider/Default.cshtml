@model List<Slider>

<div id="slider" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <button type="button" data-bs-target="#slider" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"
                aria-current="@(i == 0 ? "true" : "false")"></button>
        }
    </div>
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="/img/@item.Resim" alt="@item.Baslik" class="d-block w-100"
                    onerror="this.src='/img/fallback.jpg'" />

            </div>
        }
    </div>
    <button type="button" class="carousel-control-prev" data-bs-target="#slider" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button type="button" class="carousel-control-next" data-bs-target="#slider" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Carousel otomatik geçiş süresi (isteğe bağlı)
            $('#slider').carousel({
                interval: 5000
            });
        });
    </script>
}

<style>
    .carousel {
        background: linear-gradient(90deg, #f8f9fa, #ffffff);
        border-radius: 1rem;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        margin-bottom: 3rem;
        overflow: hidden;
    }

    .carousel-inner {
        position: relative;
    }

    .carousel-item img {
        border-radius: 1rem;
        object-fit: cover;
        height: 500px;
        width: 100%;
        position: relative;
    }

    .carousel-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.5));
        border-radius: 1rem;
        z-index: 1;
    }

    .carousel-caption {
        background: linear-gradient(90deg, rgba(26, 26, 26, 0.7), rgba(44, 44, 44, 0.7));
        border-radius: 0.5rem;
        padding: 1rem 1.5rem;
        color: #ffffff;
        bottom: 2rem;
        z-index: 2;
    }

    .carousel-caption h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .carousel-indicators {
        bottom: -60px;
        z-index: 3;
    }

    .carousel-indicators [data-bs-target] {
        background-color: #00aaff;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin: 0 8px;
        opacity: 0.5;
        transition: all 0.3s ease;
        border: none;
    }

    .carousel-indicators [data-bs-target]:hover {
        background-color: #0088cc;
        opacity: 0.8;
    }

    .carousel-indicators .active {
        opacity: 1;
        transform: scale(1.3);
        background-color: #00aaff;
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 48px;
        height: 48px;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0, 170, 255, 0.2);
        border-radius: 50%;
        opacity: 0.8;
        transition: all 0.3s ease;
        z-index: 2;
    }

    .carousel-control-prev:hover,
    .carousel-control-next:hover {
        background: rgba(0, 136, 204, 0.3);
        opacity: 1;
        transform: translateY(-50%) scale(1.2);
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%2300aaff' viewBox='0 0 8 8'%3e%3cpath d='M5.25 0l-4 4 4 4 1.5-1.5L4.25 4l2.5-2.5L5.25 0z'/%3e%3c/svg%3e");
        width: 24px;
        height: 24px;
    }

    .carousel-control-next-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%2300aaff' viewBox='0 0 8 8'%3e%3cpath d='M2.75 0l-1.5 1.5L3.75 4l-2.5 2.5L2.75 8l4-4-4-4z'/%3e%3c/svg%3e");
    }

    .carousel-control-prev:hover .carousel-control-prev-icon,
    .carousel-control-next:hover .carousel-control-next-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%230088cc' viewBox='0 0 8 8'%3e%3cpath d='M5.25 0l-4 4 4 4 1.5-1.5L4.25 4l2.5-2.5L5.25 0z'/%3e%3c/svg%3e");
    }

    .carousel-control-next:hover .carousel-control-next-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%230088cc' viewBox='0 0 8 8'%3e%3cpath d='M2.75 0l-1.5 1.5L3.75 4l-2.5 2.5L2.75 8l4-4-4-4z'/%3e%3c/svg%3e");
    }

    /* Mobil Görünüm */
    @@media (max-width: 768px) {
        .carousel-item img {
            height: 300px;
        }

        .carousel-caption h3 {
            font-size: 1rem;
            padding: 0.5rem 1rem;
        }

        .carousel-indicators {
            bottom: -50px;
        }

        .carousel-indicators [data-bs-target] {
            width: 8px;
            height: 8px;
            margin: 0 6px;
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 36px;
            height: 36px;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            width: 20px;
            height: 20px;
        }
    }

    @@media (max-width: 576px) {
        .carousel-item img {
            height: 200px;
        }

        .carousel-caption h3 {
            font-size: 0.9rem;
            padding: 0.4rem 0.8rem;
        }

        .carousel-indicators {
            bottom: -40px;
        }

        .carousel-indicators [data-bs-target] {
            width: 6px;
            height: 6px;
            margin: 0 4px;
        }
    }
</style>