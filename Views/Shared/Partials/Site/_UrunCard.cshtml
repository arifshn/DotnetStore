@model Urun

<div class="card border-0 shadow-sm rounded-3 h-100">
    <div class="img-wrap position-relative">

        <img src="~/img/@Model.Resim" alt="@Model.UrunAdi" class="card-img-top rounded-top-3"
            style="object-fit: cover; height: 200px;" onerror="this.src='/img/fallback.jpg'" />
    </div>
    <div class="card-body d-flex flex-column p-3">
        <a asp-controller="Urun" asp-action="Details" asp-route-id="@Model.Id"
            class="text-dark text-decoration-none text-truncate mb-2 fw-semibold"
            title="@Model.UrunAdi">@Model.UrunAdi</a>
        <div class="price-wrap mt-auto">
            <span class="price-discount text-dark fw-bold">@Model.Fiyat ₺</span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Kartlara hover efekti
            $('.card').hover(
                function () {
                    $(this).addClass('shadow').css('transform', 'translateY(-5px)');
                },
                function () {
                    $(this).removeClass('shadow').css('transform', 'translateY(0)');
                }
            );
        });
    </script>
}

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        overflow: visible;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3) !important;
    }

    .img-wrap {
        position: relative;
        z-index: 0;
        overflow: visible;
    }

    .card-img-top {
        width: 100%;
        max-height: 100%;
        object-fit: cover;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        position: relative;
        z-index: 1;
        overflow: visible;
        min-height: 100px;
    }

    .text-primary {
        color: #00aaff !important;
        max-width: 100%;
        line-height: 1.5;
        overflow: visible;
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
        z-index: 2;
    }

    .price-wrap {
        overflow: visible;
        width: 100%;
        margin-top: auto;
    }

    .price-discount {
        font-size: 1.1rem;
        color: #495057;
        line-height: 1.5;
        overflow: visible;
    }

    .price-old {
        font-size: 0.9rem;
        color: #6c757d;
    }

    /* Mobil Görünüm */
    @@media (max-width: 768px) {
        .card-img-top {
            height: 150px;
        }

        .card-body {
            padding: 1.5rem;
            min-height: 100px;
            overflow: visible;
        }

        .text-primary {
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.3rem 0.6rem;
        }

        .price-wrap {
            overflow: visible;
        }

        .price-discount {
            font-size: 1rem;
            line-height: 1.5;
        }

        .price-old {
            font-size: 0.85rem;
        }
    }
</style>