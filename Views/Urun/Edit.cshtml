@model dotnet_store.Models.UrunEditModel

@{
    Layout = "_AdminLayout";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header bg-white border-0 py-4 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0 text-primary">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Ürün Güncelle
                        </h5>
                        <a asp-controller="Urun" asp-action="Index" class="btn btn-primary btn-sm">
                            <i class="fa-solid fa-list me-2"></i>Ürün Listesi
                        </a>
                    </div>
                    <div class="card-body p-4 p-md-5">
                        <div asp-validation-summary="All" class="text-danger mb-4"></div>
                        <form method="post" enctype="multipart/form-data">
                            <input type="hidden" name="Id" value="@Model?.Id" />
                            <input type="hidden" name="ResimAdi" value="@Model?.ResimAdi" />
                            <div class="mb-4">
                                <label asp-for="UrunAdi" class="form-label fw-bold text-primary">Ürün Adı</label>
                                <input asp-for="UrunAdi" class="form-control rounded-3"
                                    placeholder="Ürün adını girin" />
                                <span asp-validation-for="UrunAdi" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Aciklama" class="form-label fw-bold text-primary">Ürün
                                    Açıklaması</label>
                                <textarea asp-for="Aciklama" rows="4" class="form-control rounded-3"
                                    placeholder="Ürün açıklamasını girin"></textarea>
                                <span asp-validation-for="Aciklama" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Fiyat" class="form-label fw-bold text-primary">Fiyat</label>
                                <input asp-for="Fiyat" class="form-control rounded-3" placeholder="Fiyatı girin" />
                                <span asp-validation-for="Fiyat" class="text-danger"></span>
                            </div>
                            <div class="mb-4 form-check">
                                <input asp-for="Aktif" class="form-check-input" />
                                <label class="form-check-label" asp-for="Aktif">Aktif</label>
                            </div>
                            <div class="mb-4 form-check">
                                <input asp-for="Anasayfa" class="form-check-input" />
                                <label class="form-check-label" asp-for="Anasayfa">Ana Sayfada Göster</label>
                            </div>
                            <div class="mb-4">
                                <label asp-for="KategoriId" class="form-label fw-bold text-primary">Kategori</label>
                                <select asp-for="KategoriId" class="form-select rounded-3"
                                    asp-items="ViewBag.Kategoriler">
                                    <option value="">Kategori seçin</option>
                                </select>
                                <span asp-validation-for="KategoriId" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Resim" class="form-label fw-bold text-primary">Ürün Görseli</label>
                                @if (!string.IsNullOrEmpty(Model?.ResimAdi))
                                {
                                    <div class="mb-2">
                                        <img src="/img/@Model.ResimAdi" class="img-thumbnail rounded"
                                            style="max-height: 150px;" alt="Ürün Resmi" />
                                    </div>
                                }
                                <input asp-for="Resim" class="form-control rounded-3" type="file" />
                                <span asp-validation-for="Resim" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary rounded-3 px-4">
                                    <i class="fa-solid fa-save me-2"></i>Kaydet
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    /* Container */
    .container {
        max-width: 1200px;
        padding: 0 1rem;
    }

    /* Card */
    .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-header {
        background: #ffffff;
        border-radius: 1rem 1rem 0 0;
    }

    .card-body {
        padding: 1.5rem;
    }

    /* Text */
    .text-primary {
        color: #00aaff !important;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    /* Form Elements */
    .form-control,
    .form-select {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #00aaff;
        box-shadow: 0 0 0 0.2rem rgba(0, 170, 255, 0.25);
    }

    .form-check-input:checked {
        background-color: #00aaff;
        border-color: #00aaff;
    }

    .form-label {
        font-weight: 600;
    }

    /* Buttons */
    .btn-primary {
        background: #00aaff;
        border: none;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: #0088cc;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 136, 204, 0.3);
    }

    .btn-sm {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
    }

    /* Mobile View */
    @@media (max-width: 768px) {
        .container {
            padding: 0 0.75rem;
        }

        .card {
            margin: 0 -0.75rem;
            border-radius: 0;
        }

        .card-body {
            padding: 1rem;
        }

        .form-control,
        .form-select {
            font-size: 0.9rem;
        }

        .form-label {
            font-size: 0.9rem;
        }

        .btn {
            font-size: 0.9rem;
        }

        .img-thumbnail {
            max-height: 120px;
        }
    }
</style>