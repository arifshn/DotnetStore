@model dotnet_store.Models.KategoriEditModel

@{
    Layout = "_AdminLayout";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header bg-white border-0 py-4 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0 text-primary">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Kategori Güncelleme
                        </h5>
                        <a asp-controller="Kategori" asp-action="Index" class="btn btn-primary btn-sm">
                            <i class="fa-solid fa-list me-2"></i>Kategoriler
                        </a>
                    </div>
                    <div class="card-body p-4 p-md-5">
                        <div asp-validation-summary="All" class="text-danger mb-4"></div>
                        <form method="post">
                            <input type="hidden" name="Id" value="@Model.Id" />
                            <div class="mb-4">
                                <label asp-for="KategoriAdi" class="form-label fw-bold text-primary">Kategori
                                    Adı</label>
                                <input asp-for="KategoriAdi" class="form-control rounded-3"
                                    placeholder="Kategori adını girin">
                                <span asp-validation-for="KategoriAdi" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Url" class="form-label fw-bold text-primary">URL</label>
                                <input asp-for="Url" class="form-control rounded-3" placeholder="Kategori URL'si girin">
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary rounded-3">
                                    <i class="fa-solid fa-save me-2"></i>Kaydet
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    /* Container */
    .container {
        max-width: 1200px;
        padding: 0 1rem;
    }

    /* Card */
    .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-header {
        background: #ffffff;
        border-radius: 1rem 1rem 0 0;
    }

    .card-body {
        padding: 1.5rem;
    }

    /* Text */
    .text-primary {
        color: #00aaff !important;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    /* Form Elements */
    .form-control {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #00aaff;
        box-shadow: 0 0 0 0.2rem rgba(0, 170, 255, 0.25);
    }

    .form-label {
        font-weight: 600;
    }

    /* Buttons */
    .btn-primary {
        background: #00aaff;
        border: none;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: #0088cc;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 136, 204, 0.3);
    }

    .btn-sm {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
    }

    /* Mobile View */
    @@media (max-width: 768px) {
        .container {
            padding: 0 0.75rem;
        }

        .card {
            margin: 0 -0.75rem;
            border-radius: 0;
        }

        .card-body {
            padding: 1rem;
        }

        .btn-sm {
            font-size: 0.8rem;
            padding: 0.4rem 0.6rem;
        }

        .form-control {
            font-size: 0.9rem;
        }

        .form-label {
            font-size: 0.9rem;
        }
    }
</style>